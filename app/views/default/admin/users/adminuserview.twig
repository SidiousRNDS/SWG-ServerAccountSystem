{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="users">
            <h2><i class="fas fa-user-secret" aria-hidden="true"></i> View Users</h2>
            <hr class="hspacer">
            {% if flash.getMessage('error')[0] %}
                <div class="errmsg">
                    <i class="fas fa-exclamation-circle"></i> {{ flash.getMessage('error')[0] }}
                </div>
            {% endif %}
            {% if flash.getMessage('success')[0] %}
                <div class="successmsg">
                    <i class="fas fa-check-circle"></i> {{ flash.getMessage('success')[0] }}
                </div>
            {% endif %}

            {% set userId = "" %}

            <div class="usersInfo" style="margin-top:3%;">
                <table id="userList" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                    </thead>
                    {% for user in users %}
                        {% for id in user._id|cast_to_array %}
                            {% set userId = id %}
                        {% endfor %}
                        <tbody>
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.role }}</td>
                            <td style="text-align: center;">
                                <a href="{{ path_for('updateuserview',{'id': userId.1}) }}" title="Edit {{ user.username }}" style="color:#1E8449;"><i class="fas fa-edit fa-lg"></i></a>
                                <a href="{{ path_for('deleteuseraction',{'id': userId.1}) }}" title="Delete {{ user.username }}" style="color:#ff0000;" class="deleteEntry"><i class="fas fa-times-circle fa-lg"></i></a>
                            </td>
                        </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}