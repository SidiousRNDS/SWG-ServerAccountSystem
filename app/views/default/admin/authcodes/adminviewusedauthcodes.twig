{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="newAuthcode">
            <h2><i class="fas fa-barcode" aria-hidden="true"></i> View Used Authorization Codes</h2>
            <hr class="hspacer">

            {% include 'messaging.twig' %}

            {% set authId = "" %}

            <div class="authList" style="margin-top:3%;">
                <table id="authCodeListUsed" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Auth Code</th>
                        <th>Used Date</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for auth in authlist %}
                        {% for id in auth._id|cast_to_array %}
                            {% set authId = id %}
                        {% endfor %}
                        <tr>
                            <td>{{ auth.username }}</td>
                            <td>{{ auth.email }}</td>
                            <td>{{ auth.auth_code }}</td>
                            <td>{{ auth.used_date }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}