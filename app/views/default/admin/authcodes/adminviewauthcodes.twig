{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="newAuthcode">
            <h2><i class="fas fa-user" aria-hidden="true"></i> View Used Authorization Codes</h2>
            <hr class="hspacer">
            {% if flash.getMessage('error')[0] %}
                <div class="error-msg">
                    <i class="fas fa-exclamation-circle"></i> {{ flash.getMessage('error')[0] }}
                </div>
            {% endif %}
            {% if flash.getMessage('success')[0] %}
                <div class="successmsg">
                    <i class="fas fa-check-circle"></i> {{ flash.getMessage('success')[0] }}
                </div>
            {% endif %}
            <div class="authList" style="margin-top:3%;">
                <table id="authCodeList" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Issue Date</th>
                        <th>Used Date</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for auth in authlist %}
                        <tr>
                            <td>{{ auth.username }}</td>
                            <td>{{ auth.email }}</td>
                            <td>{{ auth.created_at }}</td>
                            <td>{{ auth.used_date }}</td>
                            <td style="text-align:center">
                                {%  if userPerms.authcodes.read == "r"%}
                                <a href="{{ path_for('viewallused')}}/view/{{ auth.aaid }}" title="View data for the authentication code for {{ auth.username }}"><i class="fas fa-eye fa-lg"></i></a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}