{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="newAuthcode">
            <h2><i class="fas fa-user" aria-hidden="true"></i> View Used Authorization Codes</h2>
            <hr class="hspacer">

            {% include 'messaging.twig' %}

            <div class="authList" style="margin-top:3%;">
                <table id="authCodeList" class="table table-striped table-bordered" style="width:100%;">
                    <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Issue Date</th>
                        <th>Used Date</th>
                        <th style="text-align:center;">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for auth in authlist %}

                        <tr>
                            <td>{{ auth.username }}</td>
                            <td>{{ auth.email }}</td>
                            <td>{{ auth.created_at }}</td>
                            <td>{{ auth.used_date }}</td>
                            <td style="text-align: center;">
                                {%  if userPerms.authcodes.update == "u" %}
                                    <a href="{{ path_for('updateauthcode',{'id': auth.aaid}) }}" title="Edit {{ auth.username }} Patch" style="color:#1E8449;"><i class="fas fa-edit fa-lg"></i></a>
                                {% endif %}
                                {%  if userPerms.authcodes.delete == "d" %}
                                    <a href="{{ path_for('deleteauthcodeaction',{'id':auth.aaid}) }}" title="Delete {{ auth.username }} Patch" style="color:#ff0000;" class="deleteEntry"><i class="fas fa-times-circle"></i></a>
                                {% endif %}
                            </td>
                            <!-- <td style="text-align:center">
                                {%  if userPerms.authcodes.read == "r"%}
                                    <a href="{{ path_for('viewallused')}}/view/{{ auth.aaid }}" title="View data for the authentication code for {{ auth.username }}"><i class="fas fa-eye fa-lg"></i></a>
                                {% endif %}
                            </td> -->
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}