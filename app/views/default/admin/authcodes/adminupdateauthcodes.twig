{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="newAuthcode">
            <h2><i class="fas fa-barcode" aria-hidden="true"></i> Update Authentication Code for {{ authlist.username }}</h2>
            <hr class="hspacer">

            {% include 'messaging.twig' %}

            <form id="nAuthcode" name="newAuthcode" method="post" action= {{ path_for('updateauthaction') }}>
                <input type="hidden" name="id" value="{{ authlist._id }}">
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label id="usernamelabel" for="usernameInput">Username</label>
                            <input type="text" class="form-control" id="usernameInput" name="username" aria-describedby="usernameHelp" value="{{ authlist.username }}"/>
                            <small id="usernameHelp" class="form-text text-muted">*Only use Alpha/Numeric and special characters (@.)</small>
                        </div>
                        <div class="col-xs-6">
                            <label id="emaillabel" for="emailInput">Email</label>
                            <input type="email" class="form-control" id="emailInput" name="email" aria-describedby="emailHelp" value="{{ authlist.email }}"/>
                            <small id="emailHelp" class="form-text text-muted"></small>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12" style="margin-top:1%;">
                            <label id="prefixlabel" for="prefix">Authentication Code</label><br/>

                            {{ authlist.auth_code }}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-12" style="margin-top:1%;">
                            <label id="prefixlabel" for="prefix">Activate Code</label> <br/>
                            <select name="active">
                                <option value="0">Inactive</option>
                                <option value="1">Active</option>
                            </select>

                        </div>
                    </div>
                </div>
                <div class="row sgroup">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <button type="submit" class="btn btn-default" id="accCreate"><i class="fas fa-barcode" aria-hidden="true"></i> Update Authcode</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
