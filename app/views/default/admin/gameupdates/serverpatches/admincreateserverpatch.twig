{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="newUpdate">
            <h2><i class="fas fa-wrench" aria-hidden="true"></i> Create New Server Patch</h2>
            <hr class="hspacer">
            {% include 'messaging.twig' %}

            <form id="nUpdate" name="newUpdate" method="post" action="{{path_for('createserverpatchaction')}}" enctype="multipart/form-data">
                <div class="row">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <label id="updateTitlelabel" for="updateTitleInput">Patch Title</label>
                            <input type="text" class="form-control" id="updateTitleInput" name="updateTitle"/>
                        </div>
                    </div>
                </div>
                <div class="row sgroup">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label id="updateServerlabel" for="updateServerInput">Patch Server</label>
                            <select name="updateforserver">
                                <option name="">Select the server this patch is for</option>
                                <option name="live">{{ liveserver }}</option>
                                <option name="test">{{ testserver }}</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row sgroup">
                    <div class="form-group">
                        <div class="col-xs-12">
                            <label id="updateNoteslabel" for="updateNotesInput">Patch Notes</label>
                            <textarea  rows="4" cols="300" class="form-control" id="summernote" name="updateNotes"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row sgroup">
                    <div class="form-group">
                        <div class="col-xs-8">
                            <label id="updateTreFilelabel" for="updateTreFileInput">Patch TRE File</label>
                            <input type="file" class="form-control" id="updateTreFileInput" name="updateTreFile"/>
                        </div>
                    </div>
                </div>
                <div class="row sgroup">
                    <div class="form-group">
                        <div class="col-xs-6">
                            <button type="submit" class="btn btn-default" id="serverUpdateCreate"><i class="fas fa-wrench"></i> Create Server Patch</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}