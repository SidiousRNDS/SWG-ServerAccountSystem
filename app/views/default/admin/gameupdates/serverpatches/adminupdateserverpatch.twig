{% extends "admindashboard.twig" %}

{% block content %}
    <div id="adminmain">
        <div id="serverpatches">
            <h2><i class="fas fa-wrench" aria-hidden="true"></i> Edit Patch - "{{ patches.patch_title }}"</h2>
            <hr class="hspacer">

            {% include 'messaging.twig' %}
        </div>

        {% set patchId = "" %}
        {% for id in patches._id|cast_to_array %}
            {% set patchId = id.1 %}
        {% endfor %}
        <form id="nNotesUpdate" name="newUpdate" method="post" action="{{path_for('updateserverpatchaction')}}">
            <input type="hidden" name="id" value="{{ patchId}}">
            <input type="hidden" name="patch_title" value="{{ patches.patch_title }}">
            <div class="row sgroup">
                <div class="form-group">
                    <div class="col-xs-12">
                        <label id="updateNoteslabel" for="updateNotesInput">Patch Notes</label>
                        <textarea  rows="4" cols="300" class="form-control" id="summernote" name="updateNotes">{{ patches.patch_notes }}</textarea>
                    </div>
                </div>
            </div>
            <div class="row sgroup">
                <div class="form-group">
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-default" id="serverUpdateCreate"><i class="fas fa-wrench"></i> Update Server Patch Notes</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    </div>
{% endblock %}